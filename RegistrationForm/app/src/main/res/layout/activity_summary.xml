<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:padding="24dp"
        app:cardBackgroundColor="#FFF8CB"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="hehehehehehehehehhehehe jdjdjde ksjdjdjd ejdjdjd jedjdjd jdjdkjdj sjdjsdkk"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact me through:"
        android:textSize="20sp"
        android:layout_marginTop="24dp"/>
    <TextView
        android:id="@+id/edit_text_email_id_to_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="akashreings200@gmail.com"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/edit_text_phone_number_to_send"
        android:layout_height="wrap_content"
        tools:text="9940020750"
        android:layout_marginTop="8dp"/>





</LinearLayout>




